<% if action == :new %>
  <% action_url = cats_url %>
<% else %>
  <% action_url = cat_url(@cat) %>
<% end %>

<form  action="<%= action_url %>" method="post">
  <% if action == :edit%>
   <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value="<%= cat.name %>">

  <label for="bdate">Birth Date</label>
  <input id="bdate" type="text" name="cat[birth_date]" value="<%= cat.birth_date %>">

  <label for="sex">Sex</label>
  <input id="sex" type="text" name="cat[sex]" value="<%= cat.sex %>">

  <label for="color">Color</label>
  <input id="color" type="text" name="cat[color]" value="<%= cat.color %>">

  <label for="desc">Description</label>
  <textarea name="description" rows="8" cols="80"><%= cat.description %></textarea>

  <%= button_to 'Submit', action_url %>

</form>
